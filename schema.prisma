generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String              @id @default(auto()) @map("_id") @db.ObjectId
  clerkId      String              @unique
  email        String?
  createdAt    DateTime            @default(now())
  youtubeConns YouTubeConnection[]
  analyses     Analysis[]
}

model YouTubeConnection {
  id             String   @id @default(auto()) @map("_id") @db.ObjectId
  entityId       String // stores Clerk user id (not ObjectId)
  provider       String
  connectedAt    DateTime @default(now())
  connectionData Json
  user           User?    @relation(fields: [entityId], references: [clerkId])
}

model Analysis {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  userId      String // stores Clerk user id (matches User.clerkId)
  channelId   String
  channelName String?
  videoCount  Int
  depth       String?
  resultJson  Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user             User              @relation(fields: [userId], references: [clerkId])
  videoTranscripts VideoTranscript[]
  agentDecisions   AgentDecision[]
}

model VideoTranscript {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  analysisId String?  @db.ObjectId
  videoId    String
  title      String?
  transcript Json
  createdAt  DateTime @default(now())

  analysis Analysis? @relation(fields: [analysisId], references: [id])
}

model AgentDecision {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  analysisId String?  @db.ObjectId
  taskName   String
  decision   String
  metadata   Json?
  confidence Float?
  createdAt  DateTime @default(now())

  analysis Analysis? @relation(fields: [analysisId], references: [id])
}
